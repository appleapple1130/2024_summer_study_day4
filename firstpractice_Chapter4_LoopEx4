package firstpractice;

public class Chapter4_LoopEx4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int i;
		int j;
		for(i=1;i<8;i+=2) {
			for(j=7;j>i;j-=2) {
				System.out.print(" ");
			}
			for(j=0;j<i;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		for(i=1;i<8;i+=2) {
			for(j=0;j<i;j+=2) {
				System.out.print(" ");
			}
			for(j=6;j>i;j--) {
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
